//***vdoing主题-变量***//

// 颜色

$bannerTextColor = #fff // 首页banner区(博客标题)文本颜色
$accentColor = #f96d8d
$activeColor = #ff5722
$arrowBgColor = #ccc
$badgeTipColor = #42b983
$badgeWarningColor = darken(#ffe564, 35%)
$badgeErrorColor = #DA5961

// 布局
$navbarHeight = 3.6rem
$sidebarWidth = 18rem
$contentWidth = 860px
$homePageWidth = 1100px
$rightMenuWidth = 230px // 右侧菜单

// 代码块
$lineNumbersWrapperWidth = 2.5rem

// 浅色模式
.theme-mode-light
  --bodyBg: #f4f4f4
  --mainBg: rgba(255,255,255,.9)
  --mainBgHover: rgb(255,255,255)
  --sidebarBg: rgba(255,255,255,.6)
  --blurBg: rgba(255,255,255,.7)
  --customBlockBg: #f1f1f1
  --textColor: #000
  --textLightenColor: #f96d8d
  --borderColor: rgba(0,0,0,.15)
  --codeBg: #f6f6f6
  --codeColor: #525252
  codeThemeLight()

// 深色模式
.theme-mode-dark
  --bodyBg: rgb(39,39,43)
  --mainBg: rgba(30,30,34,.9)
  --mainBgHover: rgb(30,30,34)
  --sidebarBg: rgba(30,30,34,.6)
  --blurBg: rgba(30,30,34,.7)
  --customBlockBg: rgb(39,39,43)
  --textColor: rgb(155,155,170)
  --textLightenColor: #f96d8d
  --borderColor: #2C2C3A
  --codeBg: #252526
  --codeColor: #fff
  codeThemeDark()

// 阅读模式
.theme-mode-read
  --bodyBg: rgb(236,236,204)
  --mainBg: rgba(245,245,213,.9)
  --mainBgHover: rgb(245,245,213)
  --sidebarBg: rgba(245,245,213,.6)
  --blurBg: rgba(245,245,213,.7)
  --customBlockBg: rgb(236,236,204)
  --textColor: #704214
  --textLightenColor: #996633
  --borderColor: rgba(0,0,0,.15)
  --codeBg: #282c34
  --codeColor: #fff
  codeThemeDark()
